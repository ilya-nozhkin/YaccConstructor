<Project Sdk="Microsoft.NET.Sdk">
  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <CallTarget Condition="!Exists('Lexer.fs')" Targets="CallFsLex" />
    <CallTarget Condition="!Exists('Parser.fs')" Targets="CallYCFsYacc" />
  </Target>

  <ItemGroup>
    <NuGetPaths Include="$(NuGetPackageRoot)" />
  </ItemGroup>

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <NoWarn>NU1701</NoWarn>

    <FsLexYaccVersion>7.0.6</FsLexYaccVersion>
    <FsLexYaccPath>$(NuGetPackageRoot)fslexyacc\$(FsLexYaccVersion)\build\</FsLexYaccPath>
    <FsLexYaccTargets>$(FsLexYaccPath)FsLexYacc.targets</FsLexYaccTargets>
  </PropertyGroup>

  <Import Condition="Exists($(FsLexYaccTargets))" Project="$(FsLexYaccTargets)" />
  <Import Project="..\YC.FsYacc\YC.FsYacc.targets" />
  
  <ItemGroup>
    <FsLex Include="Lexer.fsl" OtherFlags="--unicode" />
    <YCFsYacc Include="Parser.fsy" OtherFlags="-o Parser.fs -module Yard.Frontends.YardFrontend.GrammarParser -pos SourcePosition -token Source" />
    <Compile Include="Parser.fs" />
    <Compile Include="Lexer.fs" />
    <Compile Include="Main.fs" />
    <Compile Include="YardFrontend.fs" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\AST.Common\Common.AST.fsproj" />
    <ProjectReference Include="..\RNGLRCommon\RNGLRCommon.fsproj" />
    <ProjectReference Include="..\RNGLRGenerator\RNGLRGenerator.fsproj" />
    <ProjectReference Include="..\RNGLRParser\RNGLRParser.fsproj" />
    <ProjectReference Include="..\YC.FsYacc\YC.FsYacc.fsproj" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="FsLexYacc" Version="7.0.6">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="FSharp.Core" Version="4.5.0" />
    <PackageReference Update="System.ValueTuple" Version="4.5.0" />
  </ItemGroup>
</Project>