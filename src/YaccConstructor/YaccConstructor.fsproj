<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <OutputType>Exe</OutputType>
    <EmitEntryPoint>true</EmitEntryPoint>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <NoWarn>NU1701</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="Common.fs" />
    <Compile Include="API.fs" />
    <Compile Include="Main.fs" />
    <None Include="App.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="YaccConstructor.runtimeconfig.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Argu" Version="5.1.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Common\Common.fsproj" />
    <ProjectReference Include="..\Constraints\Constraints.fsproj" />
    <ProjectReference Include="..\Conversions\Conversions.fsproj" />
    <ProjectReference Include="..\FsYaccFrontend\FsYaccFrontend.fsproj" />
    <ProjectReference Include="..\GLLGenerator\GLLGenerator.fsproj" />
    <ProjectReference Include="..\RNGLRGenerator\RNGLRGenerator.fsproj" />
    <ProjectReference Include="..\YardFrontend\YardFrontend.fsproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Update="FSharp.Core" Version="4.5.0" />
    <PackageReference Update="System.ValueTuple" Version="4.5.0" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="YaccConstructor.targets" />
  </ItemGroup>
  <Target Name="PostBuild" BeforeTargets="PostBuildEvent">
    <Exec Command="dotnet publish --no-build -c $(Configuration)" />
    
    <ItemGroup>
      <Binaries Include="$(OutputPath)\publish\*.dll;$(OutputPath)\publish\*.exe;$(OutputPath)\publish\*.config;$(OutputPath)\publish\*.runtimeconfig.json" />
    </ItemGroup>   

    <Copy SourceFiles="@(Binaries)" DestinationFolder="bin\tool" />
  </Target>
</Project>